@using mvcOlx.Models
@{
    ViewBag.Title = "Detail";
    List<Ad> list = ViewBag.detail;
}

<head>
    <title>OLX - Ad Details</title>

    <link href="~/StyleSheet/MyStyleSheet.css" rel="stylesheet" />

    <style>
    </style>

    <script type="text/javascript">

    </script>

</head>

<body>


        <div>

            <div id="olxlogo">

                <a href="/MainOlx/Home" id="topHomeLink">
                    <img src="/images/OLX_Logo.jpg" alt="OLX Logo" style="width: 15%; height: 135px; margin-left: 0.25%;" />
                </a>
                <span class="slogan" style="font-size: 28px; font-weight: bold; color: orange; margin-left: 1.5%">
                    Pakistan's Largest Marketplace
                </span>

                <span class="account">
                    @{

                        if (@ViewBag.person == "Log in to My Account")
                        {
                            <a href="/MainOlx/Login" class="blk" style="color: green" id="topLoginLink">
                                <img src="/images/green-man.png" alt="Person Icon" style="width: 3%; height: 35px; margin-left: 0.25%; position: relative; top: 2px" />
                                <strong>
                                    @ViewBag.person
                                </strong>
                            </a>
                        }
                        else
                        {

                            <a href="/MainOlx/Profile" class="blk" style="color: green" id="topProfileLink">
                                <img src="/images/green-man.png" alt="Person Icon" style="width: 3%; height: 35px; margin-left: 0.25%; position: relative; top: 2px" />
                                <strong>
                                    @ViewBag.person
                                </strong>
                            </a>
                        }
                    }

                </span>

                <span class="account" style="margin-left: 1%">
                    <a id="postNewAdLink" class="blk" style="color: purple" href="/MainOlx/SubmitAd">
                        <img src="/images/plus1.png" alt="Plus Icon" style="width: 3%; height: 32px; margin-left: 0.25%; position: relative; top: 2px" />
                        <strong>
                            Submit an Ad
                        </strong>
                    </a>
                </span>

                <br />

            </div>

            <br />


            <div style="margin-left:44%">
                <span style="font-size:26px; font-weight:bold; color:maroon">
                    Ad Detail
                </span>
            </div>


            <div style="margin-left:25%; margin-right:25%">

                <div>

                    <hr />

                    <br />


                    <img src=@Url.Content(list[0].AdImage) alt="Photograph" style="width: 56%; height: 68%; float:right" />


                    <div>
                        <span style="font-size: 24px; font-family: Calibri; ">
                            Title:
                        </span>

                        <span style="font-size: 26px; font-weight: bold; font-family:times new roman">
                            <strong>
                                @list[0].Title
                            </strong>
                        </span>
                    </div>

                    <br />

                    @if (@list[0].Price != null)
                    {
                        <div>

                            <span style="font-size: 20px;">
                                Price:
                            </span>
                            <span style="font-size: 22px; font-family: Times New Roman">
                                Rs. @list[0].Price
                            </span>
                        </div>

                        <br />
                    }

                    <div>
                        <span style="font-size: 20px;">
                            Location:
                        </span>
                        <span style="font-size: 22px; font-family: Times New Roman">
                            @list[0].City
                        </span>
                    </div>

                    <br />

                    <div>
                        <span style="font-size: 20px;">
                            Province:
                        </span>
                        <span style="font-size: 22px; font-family: Times New Roman">
                            @list[0].Province
                        </span>
                    </div>

                    <br />

                    @if (@list[0].Brand != null)
                    {
                        <div>
                            <span style="font-size: 20px;">
                                Brand:
                            </span>
                            <span style="font-size: 22px; font-family: Times New Roman">
                                @list[0].Brand
                            </span>
                        </div>

                        <br />
                    }

                    <div>
                        <span style="font-size: 20px;">
                            Category:
                        </span>
                        <span style="font-size: 22px; font-family: Times New Roman">
                            @list[0].Category
                        </span>
                    </div>

                    <br />

                    <div>
                        <span style="font-size: 20px;">
                            Ad Time:
                        </span>
                        <span style="font-size: 22px; font-family: Times New Roman">
                            @list[0].Ad_time
                        </span>
                    </div>

                    <br />

                    <div>
                        <span style="font-size: 20px;">
                            Description:
                        </span>
                        <span style="font-size: 22px; font-family: Times New Roman">
                            @list[0].AdDescription
                        </span>
                    </div>

                    <br />

                    <div>
                        <span style="font-size: 20px;">
                            Owner Name:
                        </span>
                        <span style="font-size: 22px; font-family: Times New Roman">
                            @list[0].Name
                        </span>
                    </div>

                    <br />


                    <div>
                        <span style="font-size: 20px;">
                            Owner Phone:
                        </span>
                        <span style="font-size: 22px; font-family: Times New Roman">
                            @list[0].Phone
                        </span>
                    </div>
                                        
                    <br />

                    @using (Html.BeginForm("Email", "MainOlx", new { emailid = @list[0].Email, title = @list[0].Title }, FormMethod.Post, null))
                    {
                        <input type="submit" value="Contact via Email" class="buttons">
                    }

                    <br />

                    <hr />

                </div>

            </div>


        </div>

</body>