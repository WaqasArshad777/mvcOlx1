
@using mvcOlx.Models
@{
    ViewBag.Title = "Email";
   
    
}

<head>
    <title>Email</title>

    <link href="~/StyleSheet/MyStyleSheet.css" rel="stylesheet" />

    <style>
    </style>

    <script type="text/javascript">



    </script>

</head>


<body>

    <div style="margin-left:4%">

        <div id="olxlogo">

            <a href="/MainOlx/Home" id="topHomeLink">
                <img src="/images/OLX_Logo.jpg" alt="OLX Logo" style="width: 15%; height: 135px; margin-left: 0.25%;" />
            </a>
            <span class="slogan" style="font-size: 28px; font-weight: bold; color: orange; margin-left: 1.5%">
                Pakistan's Largest Marketplace
            </span>

            <span class="account">
                @{

                    if (@ViewBag.person == "Log in to My Account")
                    {
                        <a href="/MainOlx/Login" class="blk" style="color: green" id="topLoginLink">
                            <img src="/images/green-man.png" alt="Person Icon" style="width: 3%; height: 35px; margin-left: 0.25%; position: relative; top: 2px" />
                            <strong>
                                @ViewBag.person
                            </strong>
                        </a>
                    }
                    else
                    {

                        <a href="/MainOlx/Profile" class="blk" style="color: green" id="topProfileLink">
                            <img src="/images/green-man.png" alt="Person Icon" style="width: 3%; height: 35px; margin-left: 0.25%; position: relative; top: 2px" />
                            <strong>
                                @ViewBag.person
                            </strong>
                        </a>
                    }
                }

            </span>

            <span class="account" style="margin-left: 1%">
                <a id="postNewAdLink" class="blk" style="color: purple" href="/MainOlx/SubmitAd">
                    <img src="/images/plus1.png" alt="Plus Icon" style="width: 3%; height: 32px; margin-left: 0.25%; position: relative; top: 2px" />
                    <strong>
                        Submit an Ad
                    </strong>
                </a>
            </span>


        </div>


        <br />
@using (Html.BeginForm("Sending", "MainOlx", new { mailingid = @ViewBag.sendTo, subjecttitle = @ViewBag.subjectTitle, mailBy = @ViewBag.by }, FormMethod.Post, null))
            {

        <div style="margin-left: 8%;">

            <br />

            <div style="margin-left: 19.5%; margin-right: 20%">

                <span style="font-size: 25px; color: purple;">
                    To:
                </span>
                <input type="text" id="eto" value="@ViewBag.sendTo" name="mailto" style="width: 50%; height: 25px; font-size: 14px; border-color: orange" />

            </div>



            <br />

            <div style="margin-left: 16.5%; margin-right: 20%">

                <span style="font-size: 25px; color: purple;">
                    From:
                </span>
                <input type="text" id="eby" value="@ViewBag.by" name="mailby" style="width: 50%; height: 25px; font-size: 14px; border-color: orange" />

            </div>

            <br />

            <div style="margin-left: 14%; margin-right: 20%">

                <span style="font-size: 25px; color: purple;">
                    Subject:
                </span>
                <input type="text" id="esubject" value="@ViewBag.subjectTitle" name="subject" style="width: 50%; height: 25px; font-size: 14px; border-color: orange" />

            </div>

            <br />

            <br />

            <div style="margin-left: 17%; margin-right: 20%">

                <span style="font-size: 25px; color: purple; position: relative; top: -14px">
                    Body:
                </span>
                <textarea id="ebody" name="msjbody" cols="22" rows="5" style="width: 95%; height: 95%; font-size: 14px; border-color: orange"></textarea>

            </div>

            <br />

            <div style="margin-left: 12%; margin-right: 20%">

                <span style="font-size: 25px; color: purple;">
                    Password:
                </span>
                <input type="password" id="passwrd" name="pswrd" style="width: 50%; height: 25px; font-size: 14px; border-color: orange" />
            </div>

        </div>

        <br />

        <div style="margin-left:32%">

            <br />

           
                <input type="submit" value="Send Email" class="buttons">
            

        </div>
}
    </div>

</body>
