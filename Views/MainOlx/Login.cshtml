@{
    ViewBag.Title = "Login";
}

<head>
    <title>OLX - Log In</title>

    <link href="~/StyleSheet/MyStyleSheet.css" rel="stylesheet" />

    <style>
    </style>

    <script src="~/myScripts/login.js"></script>

</head>
<body>


    <div>

        <form id="loginForm" method="post">

            <div style="margin-left:6%">

                <div id="olxlogo">

                    <a href="/MainOlx/Home" id="topHomeLink">
                        <img src="/images/OLX_Logo.jpg" alt="OLX Logo" style="width: 15%; height: 135px; margin-left: 0.25%;" />
                    </a>

                        <span class="slogan" style="font-size: 28px; font-weight: bold; color: orange; margin-left: 1.5%">
                            Pakistan's Largest Marketplace
                        </span>

                    <span class="account">
                       
                                <a href="/MainOlx/Login" class="blk" style="color: green" id="topLoginLink">
                                    <img src="/images/green-man.png" alt="Person Icon" style="width: 3%; height: 35px; margin-left: 0.25%; position: relative; top: 2px" />
                                    <strong>
                                        Account
                                    </strong>
                                </a>                           
                    </span>

                    <span class="account" style="margin-left: 1%">
                        <a id="postNewAdLink" class="blk" style="color: purple" href="/MainOlx/SubmitAd">
                            <img src="/images/plus1.png" alt="Plus Icon" style="width: 3%; height: 32px; margin-left: 0.25%; position: relative; top: 2px" />
                            <strong>
                                Submit an Ad
                            </strong>
                        </a>
                    </span>

                    <br />

                </div>

            </div>

            <br />


            <div style="margin-left: 24%">

                <span class="slogan" style="font-size: 25px; font-weight: bold; color: maroon; margin-left: 27%">
                    Please Login
                </span>
            </div>

            <br />
            <br />
            <div style="margin-left: 28%; margin-right: 30%">

                <span class="slogan" style="font-size: 25px; color: purple; margin-left: 1%">
                    Your email:
                </span>
                <input type="email" name="Email" id="emailbox" style="width: 60%; height: 26px; font-size: 14px; border-color: orange" />


            </div>

            <br />

            <br />
            <div style="margin-left: 28%; margin-right: 30%">

                <span class="slogan" style="font-size: 25px; color: purple; margin-left: 3%">
                    Password:
                </span>
                <input type="password" name="Pass" id="pswrd" style="width: 60%; height: 26px; font-size: 14px; border-color: orange" />
            </div>
            <br />
            <br />

            <div>
                <input type="submit" id="btnlogin" class="signbtn" style="margin-left:47%" value="Log in" onclick="return formSubmitting()" />
            </div>

            <div id="error">
            </div>

            <br />
            <br />
            <br />

            <div style="margin-left:40%; font-size:20px; font-family:serif; color:orangered; font-weight:bold">
                @ViewBag.Message
            </div>

            <div>

                <br />

                <a href="/MainOlx/SignUp" class="signUp" id="signUpLink">
                    New User? Register here!
                </a>
            </div>


        </form>

    </div>

</body>