@using mvcOlx.Models
@{
    ViewBag.Title = "Edit";
    List<Ad> editAd = ViewBag.advDetail;
}


<head>
    <title>OLX - Edit Ad</title>

    <link href="~/StyleSheet/MyStyleSheet.css" rel="stylesheet" />

    <style>
    </style>

    <script src="~/myScripts/submitad.js"></script>

</head>


<body>


    <form id="editAdForm" method="get">

        <div>

            <div style="margin-left: 6%">

                <div id="olxlogo">

                    <a href="/MainOlx/Home" id="topHomeLink">
                        <img src="/images/OLX_Logo.jpg" alt="OLX Logo" style="width: 20%; height: 135px; margin-left: 0.25%;" />
                    </a>
                    <span class="slogan" style="font-size: 28px; font-weight: bold; color: orange; margin-left: 1.5%">
                        Pakistan's Largest Marketplace
                    </span>

                    <span class="account">
                        @{

                            if (@ViewBag.person == "Log in to My Account")
                            {
                                <a href="/MainOlx/Login" class="blk" style="color: green" id="topLoginLink">
                                    <img src="/images/green-man.png" alt="Person Icon" style="width: 3%; height: 35px; margin-left: 0.25%; position: relative; top: 2px" />
                                    <strong>
                                        @ViewBag.person
                                    </strong>
                                </a>
                            }
                            else
                            {

                                <a href="/MainOlx/Profile" class="blk" style="color: green" id="topProfileLink">
                                    <img src="/images/green-man.png" alt="Person Icon" style="width: 3%; height: 35px; margin-left: 0.25%; position: relative; top: 2px" />
                                    <strong>
                                        @ViewBag.person
                                    </strong>
                                </a>
                            }
                        }

                    </span>


                    <br />

                </div>


            </div>

            <br />



            <div style="margin-left: 28%">

                <span class="slogan" style="font-size: 25px; font-weight: bold; color: maroon; margin-left: 28%">
                    Edit Ad
                </span>

            </div>

            <br />
            <br />



            <div class="sign">

                <div style="margin-left: 9%; margin-right: 22%">

                    <span style="font-size: 25px; color: purple;">
                        *Ad Title:
                    </span>
                    <input type="text" value="@editAd[0].Title" name="Title" id="adtitle" style="width: 50%; height: 25px; font-size: 14px; border-color: orange" />

                </div>

                <br />

                <div style="margin-left: 7.5%; margin-right: 22%">
                    <span style="font-size: 25px; color: purple;">
                        *Category:
                    </span>
                    <span>
                        <select id="myCategories" name="Category" style="width: 50%; height: 30px; font-size: 14px; border-color: orange">
                            <option>@editAd[0].Category</option>
                            <option>Mobiles</option>
                            <option>Laptops</option>
                            <option>Vehicles</option>
                            <option>Furniture</option>
                            <option>Animals</option>
                            <option>Hobbies</option>
                            <option>Fashion</option>
                            <option>Kids</option>
                            <option>Services</option>
                            <option>Job</option>
                            <option>Real Estate</option>
                            <option>Handicraft</option>
                        </select>
                    </span>
                </div>

                <br />

                <div style="margin-left: 0.5%; margin-right: 22%">

                    <span style="font-size: 25px; color: purple; position: relative; top: -10px">
                        *Ad Description:
                    </span>
                    <input id="adDesc" type="text" value="@editAd[0].AdDescription" name="AdDescription" style="width: 45%; height: 115px; font-size: 14px; border-color: orange" />

                </div>


                <br />

                <div style="margin-left: 11%; margin-right: 20%">

                    <span style="font-size: 25px; color: purple;">
                        *Name:
                    </span>
                    <input type="text" id="name" value="@editAd[0].Name" name="Name" style="width: 50%; height: 25px; font-size: 14px; border-color: orange" />

                </div>



                <br />

                <div style="margin-left: 11.25%; margin-right: 20%">

                    <span style="font-size: 25px; color: purple;">
                        *Email:
                    </span>
                    <input type="text" id="email" value="@editAd[0].Email" name="Email" style="width: 50%; height: 25px; font-size: 14px; border-color: orange" />

                </div>

                <br />

                <div style="margin-left: 10.5%; margin-right: 20%">

                    <span style="font-size: 25px; color: purple;">
                        *Phone:
                    </span>
                    <input type="text" id="phone" value="@editAd[0].Phone" name="Phone" style="width: 50%; height: 25px; font-size: 14px; border-color: orange" />

                </div>


                <br />

                <div style="margin-left: 8%; margin-right: 22%">
                    <span style="font-size: 25px; color: purple;">
                        *Province:
                    </span>
                    <span>
                        <select id="myProvinces" name="Province" style="width: 50%; height: 30px; font-size: 14px; border-color: orange">
                            <option>@editAd[0].Province</option>
                            <option>Punjab</option>
                            <option>Sindh</option>
                            <option>Balochistan</option>
                            <option>Khyberpakhtunkhwa</option>
                        </select>
                    </span>
                </div>


                <br />

                <div style="margin-left: 14%; margin-right: 20%">

                    <span style="font-size: 25px; color: purple;">
                        *City:
                    </span>
                    <input type="text" id="city" value="@editAd[0].City" name="City" style="width: 50%; height: 25px; font-size: 14px; border-color: orange" />

                </div>

                <br />

                <div style="margin-left: 12%; margin-right: 20%">

                    <span style="font-size: 25px; color: purple;">
                        Brand:
                    </span>
                    <input type="text" id="branded" value="@editAd[0].Brand" name="Brand" style="width: 50%; height: 25px; font-size: 14px; border-color: orange" />

                </div>

                <br />

                <div style="margin-left: 13%; margin-right: 20%">

                    <span style="font-size: 25px; color: purple;">
                        Price:
                    </span>
                    <input type="text" id="price" value="@editAd[0].Price" name="Price" style="width: 50%; height: 25px; font-size: 14px; border-color: orange" />

                </div>

                <br />

                <div style="margin-left: 7%; margin-right: 22%">

                    <span style="font-size: 25px; color: purple; position: relative; top: 5px">
                        Add Photo:
                    </span>

                    <input style="margin-left: 24%" name="AdPhoto" type="file" id="uploadFile" />

                    <br />

                </div>



            </div>


            <br />
            <br />

            <div style="margin-left:8%">
                
                <input type="text" name="id" style="visibility:hidden" value=@editAd[0].AdID />

                <div>

                    @using (Html.BeginForm("Update", "MainOlx", new { id = @editAd[0].AdID }, FormMethod.Post, null))
                    {
                        <input type="submit" id="btnlogin" class="signbtn" value="Done" onclick=" return formsubmittingvalidity()" />
                    }

                </div>

            </div>

            <div id="error">
            </div>


        </div>

    </form>

</body>