@{
    ViewBag.Title = "SubmitAd";
}

<head>
    <title>OLX - Submit Ad</title>

    <link href="~/StyleSheet/MyStyleSheet.css" rel="stylesheet" />

    <style>
    </style>

    <script src="~/myScripts/submitad.js"></script>

</head>


<body>
    @using (Html.BeginForm("SubmitAd", "MainOlx", FormMethod.Post,
                            new { enctype = "multipart/form-data" }))
    {
        <div>

            <div style="margin-left: 6%">

                <div id="olxlogo">

                    <a href="/MainOlx/Home" id="topHomeLink">
                        <img src="/images/OLX_Logo.jpg" alt="OLX Logo" style="width: 20%; height: 135px; margin-left: 0.25%;" />
                    </a>

                    <span class="slogan" style="font-size: 28px; font-weight: bold; color: orange; margin-left: 1.5%">
                        Pakistan's Largest Marketplace
                    </span>

                    <span class="account">
                        @{

        if (@ViewBag.person == "Log in to My Account")
        {
            <a href="/MainOlx/Login" class="blk" style="color: green" id="topLoginLink">
                <img src="/images/green-man.png" alt="Person Icon" style="width: 3%; height: 35px; margin-left: 0.25%; position: relative; top: 2px" />
                <strong>
                    @ViewBag.person
                </strong>
            </a>
        }
        else
        {

            <a href="/MainOlx/Profile" class="blk" style="color: green" id="topProfileLink">
                <img src="/images/green-man.png" alt="Person Icon" style="width: 3%; height: 35px; margin-left: 0.25%; position: relative; top: 2px" />
                <strong>
                    @ViewBag.person
                </strong>
            </a>
        }
                        }

                    </span>


                    <br />

                </div>


            </div>

            <br />



            <div style="margin-left: 25%">

                <span class="slogan" style="font-size: 25px; font-weight: bold; color: maroon; margin-left: 28%">
                    Submit Ad
                </span>

            </div>

            <br />
            <br />



            <div class="sign">

                <div style="margin-left: 9%; margin-right: 22%">

                    <span style="font-size: 25px; color: purple;">
                        *Ad Title:
                    </span>
                    <input type="text" name="Title" id="adtitle" style="width: 50%; height: 25px; font-size: 14px; border-color: orange" />

                </div>

                <br />

                <div style="margin-left: 7.5%; margin-right: 22%">
                    <span style="font-size: 25px; color: purple;">
                        *Category:
                    </span>
                    <span>
                        <select id="myCategories" name="Category" style="width: 50%; height: 30px; font-size: 14px; border-color: orange">
                            <option>Select Category</option>
                            <option>Mobile</option>
                            <option>Laptops</option>
                            <option>Vehicles</option>
                            <option>Furniture</option>
                            <option>Animals</option>
                            <option>Hobbies</option>
                            <option>Fashion</option>
                            <option>Kids</option>
                            <option>Services</option>
                            <option>Job</option>
                            <option>Real Estate</option>
                            <option>Handicraft</option>
                        </select>
                    </span>
                </div>

                <br />

                <div style="margin-left: 0.5%; margin-right: 22%">

                    <span style="font-size: 25px; color: purple; position: relative; top: -10px">
                        *Ad Description:
                    </span>
                    <textarea id="adDesc" name="AdDescription" style="width: 45%; height: 115px; font-size: 14px; border-color: orange"></textarea>

                </div>


                <br />

                <div style="margin-left: 11%; margin-right: 20%">

                    <span style="font-size: 25px; color: purple;">
                        *Name:
                    </span>
                    <input type="text" id="name" name="Name" style="width: 50%; height: 25px; font-size: 14px; border-color: orange" />

                </div>



                <br />

                <div style="margin-left: 11.25%; margin-right: 20%">

                    <span style="font-size: 25px; color: purple;">
                        *Email:
                    </span>
                    @{
        if (@ViewBag.person == "Log in to My Account")
        {
            <input type="text" placeholder="Enter Email" id="email" name="Email" style="width: 50%; height: 25px; font-size: 14px; border-color: orange" />
        }
        else
        {
            <input type="text" id="email" value="@ViewBag.person" name="Email" style="width: 50%; height: 25px; font-size: 14px; border-color: orange" />
        }
}


                </div>

                <br />

                <div style="margin-left: 10.5%; margin-right: 20%">

                    <span style="font-size: 25px; color: purple;">
                        *Phone:
                    </span>
                    <input type="text" id="phone" name="Phone" style="width: 50%; height: 25px; font-size: 14px; border-color: orange" />

                </div>


                <br />

                <div style="margin-left: 8%; margin-right: 22%">
                    <span style="font-size: 25px; color: purple;">
                        *Province:
                    </span>
                    <span>
                        <select id="myProvinces" name="Province" style="width: 50%; height: 30px; font-size: 14px; border-color: orange">
                            <option>Select Province</option>
                            <option>Punjab</option>
                            <option>Sindh</option>
                            <option>Balochistan</option>
                            <option>Khyberpakhtunkhwa</option>
                        </select>
                    </span>
                </div>


                <br />

                <div style="margin-left: 14%; margin-right: 20%">

                    <span style="font-size: 25px; color: purple;">
                        *City:
                    </span>
                    <input type="text" id="city" name="City" style="width: 50%; height: 25px; font-size: 14px; border-color: orange" />

                </div>

                <br />

                <div style="margin-left: 12%; margin-right: 20%">

                    <span style="font-size: 25px; color: purple;">
                        Brand:
                    </span>
                    <input type="text" id="branded" name="Brand" style="width: 50%; height: 25px; font-size: 14px; border-color: orange" />

                </div>

                <br />

                <div style="margin-left: 13%; margin-right: 20%">

                    <span style="font-size: 25px; color: purple;">
                        Price:
                    </span>
                    <input type="text" id="price" name="Price" style="width: 50%; height: 25px; font-size: 14px; border-color: orange" />

                </div>

                <br />

                <div style="margin-left: 10%; margin-right: 22%">

                    <span style="font-size: 25px; color: purple; position: relative; top: 5px">
                        *Ad Photo:
                    </span>

                    <input type="file" id="uploadFile" name="AdPhoto" style="margin-left: 24%" />

                    <br />
                    <!--


                    <asp:fileupload id="FileUpload1" />


                    <asp:button id="btnUpload" cssclass="trans" text="Upload"/>



                    <asp:gridview id="GridView1" autogeneratecolumns="false" showheader="false">
                        <columns>
                            <asp:boundfield datafield="Text" />
                            <asp:imagefield dataimageurlfield="Value" controlstyle-height="100" controlstyle-width="100" />
                        </columns>
                    </asp:gridview>
                        -->


                </div>



            </div>


            <br />
            <br />

            <div id="error">
            </div>

            <br />

            <div>
                <input type="submit" id="btnlogin" class="signbtn" value="Submit" onclick=" return formSubmittingValidity()" />
            </div>



        </div>

    }

</body>